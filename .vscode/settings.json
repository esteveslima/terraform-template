// Terraform must be installed on the host machine to make the autoformat work (using terraform only in a container may not work with vscode plugin)
{
    "terraform.languageServer": {
        "enabled": true,
        "external": true,
        "args": ["serve"]
    },
    "[terraform]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "hashicorp.terraform"
    },
    "terraform-ls.experimentalFeatures": {
        "validateOnSave": true
    }
}